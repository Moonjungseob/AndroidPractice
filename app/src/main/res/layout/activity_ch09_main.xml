<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ch09_resources.Ch09MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/ch9_test_rectangle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MyTextStyle"
            android:background="@color/sub_text_color"
            android:text="@string/lunch_today"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lunch_introduce"
            android:fontFamily="@font/jua_regular"
            android:textSize="20sp"
            android:autoLink="web|phone|email"/>

        <ImageView
            android:layout_width="@dimen/profile_Img_width"
            android:layout_height="@dimen/profile_Img_width"
            android:src="@android:drawable/arrow_up_float"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>