<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ch08_event.Ch08MainEvent2Activity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <CheckBox
        android:id="@+id/ch08CheckBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="돈까스"/>

    <CheckBox
        android:id="@+id/ch08CheckBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="참깨라면&amp;참치김밥"/>

    <CheckBox
        android:id="@+id/ch08CheckBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닭도리탕|삼겹살|집밥"/>

    <Button
        android:id="@+id/ch08Btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="일어나라 친구야~~~~"
        android:textSize="30sp"/>

    <RadioGroup
        android:id="@+id/ch08RadioTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

      <RadioButton
          android:id="@+id/ch08RadioBtn1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="밥류"
          android:textSize="20sp"/>

      <RadioButton
          android:id="@+id/ch08RadioBtn2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="면류"
          android:textSize="20sp"/>

    </RadioGroup>

  </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>